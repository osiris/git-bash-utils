REPOS=$HOME'/.git-repos'

white='[0m'
green='[01;32m'
red='[01;31m'
yellow='[01;33m'

PUSH=0

test -e $REPOS
OK=$?

if [ $OK -ne 0 ]
then
  echo ERROR $REPOS not found
  exit 1
fi

while getopts "s" OPTION
do
  case $OPTION in
    s)
      PUSH=1
      ;;
  esac
done

echo

for DIR in $(cat $REPOS)
do
  cd ~

  if [ ! -d $DIR ]
  then
    S=${red}'âœ–'
    echo ' '${S}${yellow} ${DIR} ${red}'NOT FOUND'${green}
    continue
  fi

  if [ $PUSH -eq 1 ]
  then
    cd $DIR && git pull -q && git push -q >/dev/null
  else
    cd $DIR && git pull -q >/dev/null
  fi

  E=$(echo $?)

  if [ $E -eq 0 ]
  then
    S=${green}'âœ”'
  else
    S=${red}'âœ–'
  fi

  BAR=$(git-streak)
  echo ' '${S}${yellow}' '${BAR}' '${DIR}
  LOG=$(git log --pretty --format=oneline | head -1 | cut -c -8,41-)
  echo -e "${white}\t"$LOG
done

echo $white

